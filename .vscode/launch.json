{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",  // Убедитесь, что путь к manage.py правильный
            "env": {
                "FLASK_APP": "manage.py",  // Убедитесь, что FLASK_APP указывает на manage.py
                "FLASK_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        }
    ]
}